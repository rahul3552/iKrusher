<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">   
    <route url="/V1/SyncPaymentMapping/" method="POST">
        <service class="I95DevConnect\PaymentMapping\Api\PaymentMappingManagementInterface" method="processMappingData"/>
        <resources>
            <resource ref="I95DevConnect_I95DevServer::apimethods" />
        </resources>
    </route>
    <route url="/V1/SyncPaymentMethod/" method="POST">
        <service class="I95DevConnect\PaymentMapping\Api\PaymentMethodMagentoInterface" method="availablePaymentMethods"/>
        <resources>
            <resource ref="I95DevConnect_I95DevServer::apimethods" />
        </resources>
    </route>
</routes>