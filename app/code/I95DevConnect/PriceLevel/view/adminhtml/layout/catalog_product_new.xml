<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product_tabs">
            <block class="I95DevConnect\PriceLevel\Block\Adminhtml\Product\Edit\Tab" name="product.pricelist" >
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Price List</argument>
                    <argument name="url" xsi:type="url" path="pricelevel/pricelist/grid">
                        <param name="_current">1</param>
                    </argument>
                    <argument name="class" xsi:type="string">ajax</argument>
                    <argument name="group_code" xsi:type="string">advanced</argument>
                </arguments>
            </block>
            <action method="addTab">
                <argument name="name" xsi:type="string">product-pricelist</argument>
                <argument name="block" xsi:type="string">product.pricelist</argument>
            </action>
        </referenceBlock>
    </body>
</page>
