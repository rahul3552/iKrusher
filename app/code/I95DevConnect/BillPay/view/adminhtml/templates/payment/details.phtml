                                echo $block->escapeHtml($block->getPaymentTypeTitle($_payments['payment_type']));
                            endif;
                            ?>
                        </td>
                    </tr>
                </tbody>
            </table>
        <?php else: ?>
            <div class="message info empty">
                <span><?php echo $block->escapeHtml(__('You have no payment.')); ?></span>
