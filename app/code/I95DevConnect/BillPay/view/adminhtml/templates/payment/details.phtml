                        <td><?php echo $block->escapeHtml($_payments['payment_trans_id']); ?></td>
                    </tr>
                    <tr>
                        <th>Payment Date</th>
                        <td><?php echo $block->escapeHtml($_payments['payment_date']); ?></td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td><?php echo $block->escapeHtml($_payments['status']); ?></td>
                    </tr>
                    <tr>
                        <th>Payment Type</th>
                        <td><?php
                        if ($_payments['payment_type'] == 'cashondelivery'):
                            echo $block->escapeHtml(ucfirst('Cash Payment'));
