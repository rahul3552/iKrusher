<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="i95dev_connect_extensions" translate="label" sortOrder="1000000">
            <label>I95Dev Connect</label>
        </tab>
        <section id="i95devconnect_netterms" translate="label" type="text" sortOrder="60" showInDefault="1"
                 showInWebsite="1" showInStore="0">
            <label>i95Dev Connect Net Terms</label>
            <class>separator-top</class>
            <tab>i95dev_connect_extensions</tab>
            <resource>I95DevConnect_NetTerms::settings</resource>
            <group id="netterms_enabled_settings" translate="label" type="text" sortOrder="16" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enable_netterms" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable(extension)</label>
                    <comment>To enable or disable the extension.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <backend_model>Magento\Contact\Model\System\Config\Backend\Links</backend_model>
                </field>
                <field id="enable_netterms_payment_label" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable(Net Terms Label)</label>
                    <comment>Display Net Terms as payment method label instead of credit limits</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <backend_model>Magento\Contact\Model\System\Config\Backend\Links</backend_model>
                </field>
            </group>
        </section>
    </system>
</config>