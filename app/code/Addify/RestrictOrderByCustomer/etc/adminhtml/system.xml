<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="addify_extensions" translate="label" sortOrder="200">
            <label>Addify</label>
        </tab>
        <section id="restrictorderbycustomer" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Restrict Order By Customer</label>
            <tab>addify_extensions</tab>
            <resource>Addify_RestrictOrderByCustomer::restrictorderbycustomer_config</resource>
            <!-- GENERAL -->
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabeld </label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="minmessage" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Minimum Message</label>
                    <comment>This will use as a minimum quantity message.</comment>
                </field>
                <field id="maxmessage" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Maximum Message</label>
                    <comment>This will use as a maximum quantity message.</comment>
                </field>



            </group>
        </section>
    </system>
</config>