<script>
    require(['jquery','jquery/jquery.tabs'], function ($) {
        'use strict';

        $(function () {
            var permissionTab = $('#role_info_tabs_mp_admin_permission_content .entry-edit.form-inline').children('div');

            // hide all fieldset on first load
            permissionTab.find('[data-toggle=collapse]').each(function () {
                var target = $(this).attr('data-target');

                $(target).data('collapsed',true);
                $(target).collapse('hide');
            });
        });
    });
</script>
