<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!--    Set default value of product owner when create product-->
    <virtualType name="Magento\Catalog\Ui\DataProvider\Product\Form\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="mp_product_owner" xsi:type="array">
                    <item name="class" xsi:type="string">Mageplaza\AdminPermissions\Ui\DataProvider\Product\Form\Modifier\ProductOwner</item>
                    <item name="sortOrder" xsi:type="number">180</item>
                </item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="mageplaza_admin_permission_remove_source_model" xsi:type="object">Mageplaza\AdminPermissions\Console\Command\Uninstall</item>
                <item name="mageplaza_admin_permission_disable_custom_limit" xsi:type="object">Mageplaza\AdminPermissions\Console\Command\DisableCustomLimit</item>
            </argument>
        </arguments>
    </type>
</config>
