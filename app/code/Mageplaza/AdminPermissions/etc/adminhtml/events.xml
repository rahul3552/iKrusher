<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <!--    Save Admin Permissions-->
    <event name="authorization_roles_save_after">
        <observer name="mp_admin_permissions_role_save_after" instance="Mageplaza\AdminPermissions\Observer\RoleSaveAfter"/>
    </event>

    <!--    Limit Access Sales-->
    <event name="controller_action_predispatch_sales_order_view">
        <observer name="mp_admin_permissions_limit_access_order" instance="Mageplaza\AdminPermissions\Observer\Sales\LimitAccessOrder"/>
    </event>
    <event name="controller_action_predispatch_sales_order_invoice_view">
        <observer name="mp_admin_permissions_limit_access_invoice" instance="Mageplaza\AdminPermissions\Observer\Sales\LimitAccessInvoice"/>
    </event>
    <event name="controller_action_predispatch_adminhtml_order_shipment_view">
        <observer name="mp_admin_permissions_limit_access_shipment" instance="Mageplaza\AdminPermissions\Observer\Sales\LimitAccessShipment"/>
    </event>
    <event name="controller_action_predispatch_sales_order_creditmemo_view">
        <observer name="mp_admin_permissions_limit_access_creditmemo" instance="Mageplaza\AdminPermissions\Observer\Sales\LimitAccessCreditMemo"/>
    </event>
    <event name="controller_action_predispatch_sales_transactions_view">
        <observer name="mp_admin_permissions_limit_access_transactions" instance="Mageplaza\AdminPermissions\Observer\Sales\LimitAccessTransaction"/>
    </event>

    <!--    Limit Access Category-->
    <event name="controller_action_predispatch_catalog_category_edit">
        <observer name="mp_admin_permissions_limit_category_view" instance="Mageplaza\AdminPermissions\Observer\Category\Edit"/>
    </event>
    <event name="adminhtml_catalog_category_tree_can_add_root_category">
        <observer name="mp_admin_permissions_limit_category_create_root" instance="Mageplaza\AdminPermissions\Observer\Category\Create"/>
    </event>
    <event name="adminhtml_catalog_category_tree_can_add_sub_category">
        <observer name="mp_admin_permissions_limit_category_create_sub" instance="Mageplaza\AdminPermissions\Observer\Category\Create"/>
    </event>
    <event name="controller_action_predispatch_catalog_category_delete">
        <observer name="mp_admin_permissions_limit_category_delete" instance="Mageplaza\AdminPermissions\Observer\Category\Delete"/>
    </event>
    <event name="controller_action_predispatch_catalog_category_save">
        <observer name="mp_admin_permissions_limit_category_save" instance="Mageplaza\AdminPermissions\Observer\Category\Save"/>
    </event>
    <event name="catalog_category_save_before">
        <observer name="mp_admin_permissions_limit_category_save_model" instance="Mageplaza\AdminPermissions\Observer\Category\SaveModel"/>
    </event>
    <event name="catalog_category_load_after">
        <observer name="mp_admin_permissions_limit_category_load_model" instance="Mageplaza\AdminPermissions\Observer\Category\LoadModel"/>
    </event>

    <!--    Limit Access Product-->
    <event name="controller_action_predispatch_catalog_product_new">
        <observer name="mp_admin_permissions_limit_product_create" instance="Mageplaza\AdminPermissions\Observer\Product\Create"/>
    </event>
    <event name="controller_action_predispatch_catalog_product_edit">
        <observer name="mp_admin_permissions_limit_product_view" instance="Mageplaza\AdminPermissions\Observer\Product\Edit"/>
    </event>
    <event name="controller_action_predispatch_catalog_product_save">
        <observer name="mp_admin_permissions_limit_product_save" instance="Mageplaza\AdminPermissions\Observer\Product\Save"/>
    </event>
    <event name="controller_action_predispatch_catalog_product_delete">
        <observer name="mp_admin_permissions_limit_product_delete" instance="Mageplaza\AdminPermissions\Observer\Product\Delete"/>
    </event>
    <event name="catalog_product_save_before">
        <observer name="mp_admin_permissions_limit_product_save_model" instance="Mageplaza\AdminPermissions\Observer\Product\SaveModel"/>
    </event>
    <event name="catalog_product_delete_before">
        <observer name="mp_admin_permissions_limit_product_delete_model" instance="Mageplaza\AdminPermissions\Observer\Product\DeleteModel"/>
    </event>

    <!--    Limit Access Customer-->
    <event name="controller_action_predispatch_customer_index_new">
        <observer name="mp_admin_permissions_limit_customer_create" instance="Mageplaza\AdminPermissions\Observer\Customer\Create"/>
    </event>
    <event name="controller_action_predispatch_customer_index_edit">
        <observer name="mp_admin_permissions_limit_customer_view" instance="Mageplaza\AdminPermissions\Observer\Customer\Edit"/>
    </event>
    <event name="controller_action_predispatch_customer_index_delete">
        <observer name="mp_admin_permissions_limit_customer_delete" instance="Mageplaza\AdminPermissions\Observer\Customer\Delete"/>
    </event>
    <event name="customer_save_before">
        <observer name="mp_admin_permissions_limit_customer_save_model" instance="Mageplaza\AdminPermissions\Observer\Customer\SaveModel"/>
    </event>
    <event name="customer_delete_before">
        <observer name="mp_admin_permissions_limit_customer_delete_model" instance="Mageplaza\AdminPermissions\Observer\Customer\DeleteModel"/>
    </event>

    <!--    Limit Access Product Attribute-->
    <event name="controller_action_predispatch_catalog_product_attribute_new">
        <observer name="mp_admin_permissions_limit_product_attribute_create" instance="Mageplaza\AdminPermissions\Observer\ProductAttribute\Create"/>
    </event>
    <event name="controller_action_predispatch_catalog_product_attribute_edit">
        <observer name="mp_admin_permissions_limit_product_attribute_view" instance="Mageplaza\AdminPermissions\Observer\ProductAttribute\Edit"/>
    </event>
    <event name="controller_action_predispatch_catalog_product_attribute_save">
        <observer name="mp_admin_permissions_limit_product_attribute_save" instance="Mageplaza\AdminPermissions\Observer\ProductAttribute\Save"/>
    </event>
    <event name="controller_action_predispatch_catalog_product_attribute_delete">
        <observer name="mp_admin_permissions_limit_product_attribute_delete" instance="Mageplaza\AdminPermissions\Observer\ProductAttribute\Delete"/>
    </event>
    <event name="catalog_entity_attribute_save_before">
        <observer name="mp_admin_permissions_limit_product_attribute_save_model" instance="Mageplaza\AdminPermissions\Observer\ProductAttribute\SaveModel"/>
    </event>
    <event name="catalog_entity_attribute_delete_before">
        <observer name="mp_admin_permissions_limit_product_attribute_delete_model" instance="Mageplaza\AdminPermissions\Observer\ProductAttribute\DeleteModel"/>
    </event>

    <!--    Limit Access Role-->
    <event name="controller_action_predispatch_adminhtml_user_role_editrole">
        <observer name="mp_admin_permissions_limit_product_attribute_view" instance="Mageplaza\AdminPermissions\Observer\Role\Edit"/>
    </event>
    <event name="controller_action_predispatch_adminhtml_user_role_saverole">
        <observer name="mp_admin_permissions_limit_role_save" instance="Mageplaza\AdminPermissions\Observer\Role\Save"/>
    </event>
    <event name="controller_action_predispatch_adminhtml_user_role_delete">
        <observer name="mp_admin_permissions_limit_role_delete" instance="Mageplaza\AdminPermissions\Observer\Role\Delete"/>
    </event>
    <event name="authorization_roles_save_before">
        <observer name="mp_admin_permissions_limit_role_save_model" instance="Mageplaza\AdminPermissions\Observer\Role\SaveModel"/>
    </event>

    <!--    Limit Access By Time-->
    <event name="controller_action_predispatch">
        <observer name="mp_admin_permissions_limit_access_by_time" instance="Mageplaza\AdminPermissions\Observer\LimitAccessByTime"/>
    </event>
    <event name="admin_user_authenticate_after">
        <observer name="mp_admin_permissions_limit_access_by_time_login" instance="Mageplaza\AdminPermissions\Observer\AuthenticateAfter"/>
    </event>

    <!--    Custom Limit Access-->
    <event name="model_delete_before">
        <observer name="mp_admin_permissions_custom_limit_delete" instance="Mageplaza\AdminPermissions\Observer\Custom\Delete"/>
    </event>
    <event name="model_save_before">
        <observer name="mp_admin_permissions_custom_limit_save" instance="Mageplaza\AdminPermissions\Observer\Custom\Save"/>
    </event>
    <event name="model_load_before">
        <observer name="mp_admin_permissions_custom_limit_load" instance="Mageplaza\AdminPermissions\Observer\Custom\Load"/>
    </event>
</config>
