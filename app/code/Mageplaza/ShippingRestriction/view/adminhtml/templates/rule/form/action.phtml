<script>
    require(['jquery'], function ($) {
        var selectAllMethod = $('#mp-select-all');
        var methods = $("select[name='rule[shipping_methods][]']");
        selectAllMethod.prop("checked", true);
        $('select[name="rule[shipping_methods][]"] option').each(function () {
            if (!$(this).prop('selected')) {
                selectAllMethod.prop("checked", false);
            }
        });
        selectAllMethod.on('change', function () {
            if ($(this).prop("checked")) {
                $('select[name="rule[shipping_methods][]"] option').prop('selected', true);
            } else {
                $('select[name="rule[shipping_methods][]"] option').prop('selected', false);
            }
        });
        methods.on('change', function () {
            $(this).find('option').each(function () {
                if (!$(this).prop('selected')) {
                    selectAllMethod.prop("checked", false);
                }
            });
        });
    });
</script>
