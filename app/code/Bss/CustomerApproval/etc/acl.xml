<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
			<resource id="Magento_Backend::admin">
				<resource id="Magento_Backend::stores">
					<resource id="Magento_Backend::stores_settings">
						<resource id="Magento_Config::config">
							<resource id="Bss_CustomerApproval::config_customerapproval" title="BSS Commerce"/>
						</resource>
					</resource>
				</resource>

                <resource id="Bss_CustomerApproval::customerapproval" title="Bss Customer Approval" sortOrder="100">
                    <resource id="Bss_CustomerApproval::api" title="Allow API" sortOrder="10" />
                </resource>
			</resource>
        </resources>
    </acl>
</config>
