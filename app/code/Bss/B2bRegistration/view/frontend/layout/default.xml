<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    	<!-- Support Magento Luna Header Link -->
        <referenceBlock name="header.links">
            <block class="Bss\B2bRegistration\Block\Account\AuthorizationLink" name="bss-authorization-link-login" template="Bss_B2bRegistration::authorization.phtml"/>
            <referenceBlock name="authorization-link-login" remove="true"/>
        </referenceBlock>
        <!-- Support Magento Bank Header Link -->
        <referenceBlock name="top.links">
            <block class="Bss\B2bRegistration\Block\Account\AuthorizationLink" name="bss-authorization-link" template="Bss_B2bRegistration::authorization.phtml"/>
            <referenceBlock name="authorization-link" remove="true"/>
        </referenceBlock>
    </body>
</page>
