                                        <item name="sagepaysuitepaypal" xsi:type="string">Aheadworks_OneStepCheckout/js/view/actions-toolbar/renderer/ebizmarts/sagepaysuite/paypal-method</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
