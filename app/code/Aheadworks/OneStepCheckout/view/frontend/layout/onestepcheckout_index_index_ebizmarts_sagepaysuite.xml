                                                <item name="float-label-converter" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="ebizmarts_sagepaysuite" xsi:type="array">
                                                            <item name="component" xsi:type="string">Aheadworks_OneStepCheckout/js/view/payment-method/post-processor/float-label-converter/ebizmarts-sagepaysuite</item>
