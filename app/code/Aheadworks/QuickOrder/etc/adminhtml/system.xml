<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="aheadworks" translate="label" sortOrder="300">
            <label>Aheadworks Extensions</label>
        </tab>
        <section id="aw_quick_order" translate="label" type="text" sortOrder="220" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Quick Order</label>
            <tab>aheadworks</tab>
            <resource>Aheadworks_QuickOrder::config_aw_quick_order</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1">
                    <label>Enable Quick Order</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="customer_group_list_to_be_enabled" translate="label" type="multiselect" sortOrder="20" showInDefault="1" showInWebsite="1">
                    <label>Enable Quick Order for Customer Group</label>
                    <source_model>Aheadworks\QuickOrder\Model\Source\Customer\Group</source_model>
                    <backend_model>Aheadworks\QuickOrder\Model\System\Config\Backend\CustomerGroupList</backend_model>
                    <can_be_empty>1</can_be_empty>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
